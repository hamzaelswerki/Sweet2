<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="MyMeterialApapTheme.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here.  <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>v -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="titleTextList" parent="Widget.AppCompat.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/color_dark_blue</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="profile_buttons_style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:fontFamily"> @font/raleway</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/titles_profile</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="my_profile_buttons_style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorPrimary">@color/titles_profile</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:fontFamily"> @font/raleway</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/titles_profile</item>
        <item name="android:textSize">14sp</item>
        <item name="icon">@drawable/arrow_right</item>
        <item name="iconTint">#BBBBBB</item>
        <item name="iconGravity">end</item>

    </style>

    <style name="text_setting_style" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily"> @font/roboto</item>

        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
