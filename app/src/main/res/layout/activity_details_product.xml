            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/button2_puls"
            app:layout_constraintEnd_toStartOf="@+id/button2_puls"
            app:layout_constraintTop_toTopOf="@+id/button2_puls" />

