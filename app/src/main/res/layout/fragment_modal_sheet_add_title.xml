<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_modal_sheet"
    android:orientation="vertical"

    android:theme="@style/MyMeterialApapTheme.AppTheme">


    <View
        android:id="@+id/diviader5"
        android:layout_width="79dp"
        android:layout_height="4dp"
        android:layout_gravity="center"

        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:background="#BBBBBB"
        android:elevation="2dp" />


    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/raleway"
        android:text="@string/location"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:background="#65CCCCCC" />


    <TextView
        android:id="@+id/textView19a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="44dp"
        android:fontFamily="@font/raleway"
        android:text="@string/add_title_to_list"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="43dp"
        app:boxStrokeColor="@color/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/title_edite_txt"
            android:layout_width="match_parent"
            android:hint="@string/add_title_to_list"
            android:layout_height="wrap_content"
            android:maxEms="80"
            android:maxLines="2" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:id="@+id/save_btn"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:padding="13dp"
        android:text="@string/save"
        android:textAllCaps="false"
        app:cornerRadius="17dp"

        />


</LinearLayout>