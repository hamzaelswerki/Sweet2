<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/material_white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_product_home"
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:scaleType="centerInside"
        android:src="@drawable/mocha" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/name_product_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             tools:text="Chocolate"
            android:textColor="@color/color_dark_blue"
            android:fontFamily="@font/raleway"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/sugar_product_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_dark_blue"
            tools:text="Sugar 3%"
            />
        <TextView
            android:textColor="@color/color_dark_blue"
            android:id="@+id/price_product_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.00"
            android:textSize="14sp"


            />


    </LinearLayout>

    <TextView
        android:id="@+id/btn_add_home"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="+"
        android:textSize="25dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorTextPrimary"

        android:background="@drawable/ic_ad" />
</LinearLayout>
